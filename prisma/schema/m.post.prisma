model Post {
    id        String    @id
    content   String
    likeCount Int       @default(0)
    deletedAt DateTime?
    editedAt  DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt()

    authorId String
    author   Profile @relation(references: [id], fields: [authorId], onDelete: Cascade)

    likes Like[]
}
